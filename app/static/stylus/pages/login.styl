.wrapper-login
	position relative
	width 100%
	height 100%
	.login-background
		width 100%
		height 100%
		position absolute
		top 0
		left 0
		background-image url("../img/30643.jpeg")
		background-size cover
	.login-container
		position absolute
		z-index 40
		left 0
		top 0
		height 100%
		display flex
		align-items center
		width 100%
		justify-content center
		.login
			max-width 600px

			&__header
				padding 15px
				background  #FBB040
				border-top-left-radius 6px
				border-top-right-radius 6px
				h2
					text-align center
					color color_white
			&__content
				padding 15px
				background color_white
				border-bottom-left-radius 6px
				border-bottom-right-radius 6px
				.form-group
					margin-bottom 10px
					margin-top 10px
